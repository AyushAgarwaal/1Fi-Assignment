{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Vite Dev Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm start",
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "name": "Attach to Vite (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true,
      "breakOnLoad": true
    }
  ]
}
